describe <%= class_node.name %>, '#<%= method_node.name %>' do
<% method_node.conditions.each do |condition| -%>
  it '<%= condition.description %>' do
    <%= class_node.instance_name %> = <%= class_node.name %>.new

    <%= class_node.instance_name %>.<%= condition.method_call %>.should == <%= condition.return_value %>
  end
<% end -%>
end
